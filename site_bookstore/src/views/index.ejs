<!DOCTYPE html>
<html>
  <%- include('partials/head', {
    title: 'Paginas Bellas || Home'
}) %>

<body>
  <%- include('partials/header') %>

  <main class="home">

    <div class="home__banner"><img src="/images/fondoHome.jpg" alt="" /></div>
    <article class="caja__slider">
      <div class="slider__banner" >
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner0.jpeg" style="width:100%">
          </div>
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner1.jpeg" style="width:100%">
          </div>
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner2.jpeg" style="width:100%">
          </div>
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner3.jpeg" style="width:100%">
          </div>
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner4.jpeg" style="width:100%">
          </div>
          <div class="caja-img"> 
              <img class="mySlides" src="/images/carrosuel/banner5.jpeg" style="width:100%">
          </div>
          <div id="arrows">
              <button class="btn btn-next">></button>
              <button class="btn btn-prev"><</button>
            </div>
            <div id="dots-wrapper" class="center_x">
              <div class="dot-nav"></div>
              <div class="dot-nav"></div>
              <div class="dot-nav"></div>
              <div class="dot-nav"></div>
              <div class="dot-nav"></div>
              <div class="dot-nav"></div>
            </div>
      </div>
     
  </article>
    
    <section class="home__categorias__titulo">
      <h3>Categorías</h3>
    </section>

    <section class="home__categorias">
      <article class="home__categorias__niños">
        <div class="home__categorias__niños__circle">
          <a href="#"><img src="/images/book-kids.png" alt="" /></a>
        </div>
        <a href="" class="home__categorias__niños__texto1">
          <h3>NIÑOS</h3>
        </a>
      </article>

      <article class="home__categorias__jovenes">
        <div class="home__categorias__jovenes__circle">
          <a href="#"><img src="/images/book-jovs.png" alt="" /></a>
        </div>
        <a href="#" class="home__categorias__niños__texto2">
          <h3>JÓVENES</h3>
        </a>
      </article>

      <article class="home__categorias__adultos">
        <div class="home__categorias__adultos__circle">
          <a href="#"><img src="/images/book-adults.png" alt="" /></a>
        </div>
        <a href="" class="home__categorias__niños__texto3">
          <h3>ADULTOS</h3>
        </a>
      </article>
    </section>

    <section class="home__best-sellers__titulo">
      <h3>Best sellers</h3>
    </section>

    <section class="home__best-sellers">
      <% products.forEach(({id, name, author, price, images})=> { %>
      <article class="home__best-sellers__producto1">
        <div class="home__best-sellers__producto1__circulo">
          <a href="/products/detail/<%= id %>"><img src="/images/<%= images[0].name %>" alt="libro La Bestia"></a>
        </div>
        <div class="home__best-sellers__producto1__transparente"></div>
        <div class="titulo">
          <h5><a href="/products/detail/" title="La Bestia"><%= name %></a></h5>
        </div>
        <div class="autor">
          <p><%= author %></p>
        </div>
        <div class="precio">
          <strong>$ <%= price %></strong>
        </div>
        <div class="home__best-sellers__producto1__estrellas">
          <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
            class="fas fa-star"></i>
        </div>
      </article>
      <% }) %>




    </section>

  </main>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/glider-js@1.7.7/glider.min.js"></script>
  <script src="/js/glider.js"></script>
  <!-- <script src="/js/alert.js"></script> -->
  <%- include('partials/footer') %>
</body>

</html>