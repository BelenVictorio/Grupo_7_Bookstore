<!DOCTYPE html>
<html lang="en">

  <%- include('partials/head', {
    title: 'Paginas Bellas || Busqueda'
}) %>
    <body>
      <%- include('partials/header') %>

        <main class="main-search">
            
<% if (results.length > 0) { %>
  <% results.forEach(({id, name, author, price, images})=> { %>
    <h1 class="titulo-catalogo">Resultado de la busqueda:  "<%= name %>"</h1>
  <hr class="hr-separacion">
    <article class="caja-result">
      <div class="results-caja-img">
        <div class="results-caja-circulo">
          <a class="result-img" href="/products/detail/<%= id %>"><img class="results-img" src="/images/<%= images[0].name%>" alt="imagen del producto"></a><!-- image a photo -->       
        </div>
        <article class="detalles-catalogo">
          <a class="result-img" href="/products/detail/<%= id %>"><p><%= name %> </p></a>
            <p class="precio-catalogo">$<%= price %></p>
            <div class="reseÃ±a">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
            <button class="result-add-button">
                <a class="result-add-a" href="/products/cart"><p>Agregar al carrito</p></a>
            </button>
      </article> 
      </div>
  </article>
  <% }) %>
  <% } else { %>
    <h2 class="product-not-found">Lo sentimos, no hemos podido encontrar ninguna coincidencia</h2>
    <img src="/images/nofound.webp" alt="Libro No Encontrado" width="100%" height="350px">
<% } %>
<section class="box-box-slider">
  <article class="caja__slider">
    <div class="slider__banner" >
        <div class="caja-img"> 
            <img class="mySlides" src="/images/carrosuel/banner0.jpeg" style="width:100%">
        </div>
        <div class="caja-img"> 
            <img class="mySlides" src="/images/carrosuel/banner1.jpeg" style="width:100%">
        </div>
        <div class="caja-img"> 
