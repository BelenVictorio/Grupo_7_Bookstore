<!DOCTYPE html>
<html>
  <%- include('partials/head', {
      title: 'Paginas Bellas || Edit'
  }) %>
  <body>
    <%- include('partials/header') %>
    <main class="main-creaEdit">
        <section class="creaEdit-section">
            <form action="/products/update/<%= product.id %>?_method=PUT" method="POST" class="creaEdit-form">
                <h2>Editar producto: <%= product.name %></h2>
                <div class="creaEdit-div">
                    <input type="text" id="titulo" name="titulo" placeholder="Titulo" value="<%= product.name %>">
                    <label for="titulo"></label>
                </div>
                <div class="creaEdit-div">
                    <input type="text" id="autor" name="autor" placeholder="Autor/a" value="<%= product.author %>">
                    <label for="autor"></label>
                </div>
                <div class="creaEdit-div">
                    <textarea id="descripcion" name="descripcion" placeholder="Descripcion"><%= product.description %></textarea>
                    <label for="descripcion"></label>
                </div>
                <div class="creaEdit-div">
                    <label for="Categorias"></label>
                    <select name="Categorias" id="Categorias">
                    <option value="">-Seleccione la categoria correspondiente</option>
                    <option value="ad" <%= product.category === "adultos" && 'selected' %>>adultos</option>
                    <option value="jo" <%= product.category === "jovenes" && 'selected' %>>jovenes</option>
                    <option value="ni"<%= product.category === "niños" && 'selected' %>>niños</option>
            </select>
                </div>
                <div class="creaEdit-div">
                    <input type="text" id="precio" name="precio" placeholder="Precio" value="<%= product.price %>">
                    <label for="precio"></label>
                </div>
                <div class="creaEdit-button">
                    <button type="submit">
                        <a href="/">Cancelar</a>
                    </button>
                    <button type="submit" name="editar">Editar</button>
                <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                    <button type="submit" name="eliminar">Eliminar</button>
                </form>
                </div>
            </form>
        </section>
    </main>
    <%- include('partials/footer') %>
  </body>
  
</html>