<!DOCTYPE html>
<html>
    <%- include('../partials/head', {
        title: 'Paginas Bellas || Creacion'
    }) %>
  <body>
    <%- include('../partials/admin-header') %>
    <main class="main-creaEdit">
        <section class="creaEdit-section">
            <form method="POST" action="/admin/add" class="creaEdit-form" enctype="multipart/form-data">
                <h2>Nuevo producto</h2>
                <div class="creaEdit-div">
                    <input type="text" id="name" name="name" placeholder="Nombre">
                    <small class="text-danger" id="errorName" ><%= locals.errors && errors.name ? errors.name.msg: "" %></small> 
                </div>
                

                <div class="creaEdit-div">
                    <input type="text" id="author" name="author" placeholder="Autor/a">
                    <small class="text-danger" id="errorAutor" ><%= locals.author && errors.author ? errors.author.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <textarea id="description" name="description" placeholder="Descripcion"></textarea>
                    <small class="text-danger" id="errorDescripcion" ><%= locals.errors && errors.description ? errors.description.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <input class=" form-control" type="file" id="img" name="image" accept=".jpg, .png" multiple>
                    <small class="text-danger" id="errorImg" ><%= locals.errors && errors.img ? errors.img.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <input type="text" id="Categories" name="category_id" placeholder="Coloca la categoria">
                    <small class="text-danger" id="errorCategoria" ><%= locals.errors && errors.categories ? errors.categories.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <select name="genres" id="genres">
                    <option value="">-Seleccione el genero correspondiente</option>
                    <option value="1">Literatura</option>
                    <option value="2">infatiles</option>
                    <option value="3">Novela</option>
                    <option value="4">Ficcion</option>
                    <option value="5">No Ficcion</option>
                    <option value="6">Juvenil</option>
                    <option value="7">Romance</option>
                    <option value="8">Terror</option>
                    <option value="9">Suspenso</option>
                    <option value="10">Comic</option>
                    <option value="11">Mangas</option>
                    <option value="12">Cuentos</option>
                    <option value="13">Arte</option>
                    <option value="14">Dise√±o</option>
                    <option value="15">Historia</option>
                    <option value="16">Filosofia</option>
                    
            </select>
            <small class="text-danger" id="errorGenero" ><%= locals.errors && errors.genres ? errors.genres.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <input type="text" id="price" name="price" placeholder="Precio">
                    <small class="text-danger" id="errorPrecio" ><%= locals.errors && errors.price ? errors.price.msg: "" %></small>
                </div>
                

                <div class="creaEdit-div">
                    <input type="text" id="cuotas" name="cuotas" placeholder="cuotas">
                    <small class="text-danger" id="errorCuotas" ><%= locals.errors && errors.cuotas ? errors.cuotas.msg: "" %></small>
                </div>
                

                <div class="creaEdit-button">
                    <button type="submit">Guardar</button>
                    <button type="reset">Limpiar</button>
                    <span class="alert-validation" id="errorForm"></span>
                    <!-- <button type="reset"  class="">
                        <a href="/products/creation">Limpiar</a>
                    </button>
                    <button type="submit" class="">
                        <a href="/products/creation">Guardar</a>
                    </button> -->
                </div>
            </form>
        </section>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/createValidator.js"></script>
  </body>
  
</html>